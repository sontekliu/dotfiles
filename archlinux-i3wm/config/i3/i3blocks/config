[time]
command=date '+%H:%M' | awk '{ printf "<span color=\"#ff00ff\">%s</span>\n", $1}'
interval=60
label=<span color="#ff00FF">‚è∞Ô∏Å </span>
border=#ff00ff
border_top=0
border_right=0
border_bottom=2
border_left=0


[date]
command=date '+%a %Y.%m.%d ' | awk '{ printf "<span color=\"#ebff91\">%s %s %s</span>\n", $1, $2, $3}'
interval=100
label=<span color="#EBFF91">üìÖ </span>
border=#EBFF91
border_top=0
border_right=0
border_bottom=2
border_left=0




