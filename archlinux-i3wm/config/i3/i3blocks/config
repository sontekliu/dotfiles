align=center
separator=false
color=#FFFFF0
separator_block_width=40
markup=pango

[home]
command=df -h /home | awk 'FNR==2 { gsub(/[A-Za-z]/, ""); printf "%i<span color=\"#50fa7b\"> GB</span>\n", $3 }'
interval=3
label=<span color="#50fa7b">ÔÄï </span>
border=#50fa7b
border_top=0
border_right=0
border_bottom=2
border_left=0


[root]
command=df -h /home | awk 'FNR==2 { gsub(/[A-Za-z]/, ""); printf "%i/%i<span color=\"#f1fa8c\"> GB</span>\n", $2, $4 }'
interval=3
label=<span color="#f1fa8c">‚õÅ </span>
border=#f1fa8c
border_top=0
border_right=0
border_bottom=2
border_left=0


[memory]
command=free --giga | awk 'FNR==2{ printf "%i<span color=\"#ff79c6\"> GB</span>\n", $7 }'
interval=2
label=<span color="#ff79c6">Óâ¶ </span>
border=#ff79c6
border_top=0
border_right=0
border_bottom=2
border_left=0


[volume]
